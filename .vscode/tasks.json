{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "CMake: configure",
		"type": "shell",
		"command": "cmake",
		"args": [
		  "-S",
		  "${workspaceFolder}",
		  "-B",
		  "${workspaceFolder}/build",
		  "-DCMAKE_BUILD_TYPE=Debug"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": [],
		"detail": "Configure CMake project"
	  },
	  {
		"label": "CMake: build",
		"type": "shell",
		"command": "cmake",
		"args": [
		  "--build",
		  "${workspaceFolder}/build"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"dependsOn": "CMake: configure",
		"problemMatcher": [],
		"detail": "Build the project"
	  }
	]
  }
